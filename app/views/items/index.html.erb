<h1>Listing items</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Val1</th>
    <th>Val2</th>
    <th>Val3</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.text %></td>
    <td><%= item.val1 %></td>
    <td><%= item.val2 %></td>
    <td><%= item.val3 %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

